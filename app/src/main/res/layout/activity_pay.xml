<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/card_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:minHeight="48dp"
            android:text="СОХРАНЕННЫЕ КАРТЫ"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:backgroundTint="@color/lightgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="4543   34**   ****   3376" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_ccv"
                android:padding="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="CCV"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/lightgrey"
                    android:textSize="11dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_weight="1.9"
                android:gravity="right">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/visa" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"

                android:text="3376   34**   ****   4333" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_ccv"
                android:padding="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="CCV"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/lightgrey"
                    android:textSize="11dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_weight="1.9"
                android:gravity="right">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/master" />
            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="135dp"
            android:background="@color/lightgrey">

        </View>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="НОВЫЕ КАРТЫ"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_ccv"
            android:orientation="horizontal"
            android:padding="13dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:hint="НОМЕР КАРТЫ"
                android:inputType="number"
                android:lines="1"
                android:maxLength="20"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/text"
                android:textColorHint="@color/lightgrey"
                android:textSize="@dimen/text" />


            <!--********you have to code at java side to detect perticular card (visa, mastercard or else)********-->

            <ImageView
                android:layout_width="35dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/master"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_ccv"
            android:orientation="horizontal"
            android:padding="14dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:hint="ИМЯ НА КАРТОЧКА"
                android:lines="1"
                android:maxLength="25"
                android:minHeight="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/text"
                android:textColorHint="@color/lightgrey"
                android:textSize="@dimen/text" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_ccv"
                android:orientation="horizontal"
                android:padding="14dp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="48dp"
                    android:paddingRight="6dp"
                    android:text="ИСЕКАЕТ В"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/sub_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:lines="1"
                    android:maxLength="5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_ccv"
                android:orientation="horizontal"
                android:padding="14dp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:paddingRight="6dp"
                    android:text="CCV"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/sub_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/text" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/pay_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:onClick="openBuy"
            android:background="@color/button"
            android:orientation="horizontal"
            android:padding="14dp"
            android:textSize="16sp"
            app:backgroundTint="@color/button"
            app:cornerRadius="10dp">


            <TextView
                android:id="@+id/total_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="ПОДВЕРДИТЕ И ОПЛАТИТЕ"
                android:textColor="@color/white"
                android:textSize="@dimen/text" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>

    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>